  <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
  <link href="css/base.css" rel="stylesheet">

</head>
<body>

<div class="container text-center">
  <div class="row">
    <div class="col-md-8 col-sm-10 col-xs-12 col-md-offset-2 left1">
      <h1>Student Manager with Redis</h1>
    </div>
  </div>

  <!-- create students here -->
  <div class="row">
    <div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 left1">
      <form action="/add" method="POST">
        <p>
          <label for="student">Add a student: </label>
          <input type="text" placeholder="Name" autofocus id="student" name="student" require>
          <input type="submit" value="Add">
        </p>
      </form>
    </div>
  </div>
  <hr>

  <!-- list and edit students here -->
  <div class="row">
    <div class="col-md-6 col-sm-8 col-xs-10 col-md-offset-0 left1">
      <form action="/allDelete?_method=DELETE" method="POST">
        <input type="submit" value="Remove All Students" class="inline moveUp1x moveLeft2x btn btn-danger"> <h3 class="inline">Students:</h3>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-sm-8 col-xs-12 col-md-offset-3 left1">
      <ul>
        <% students.forEach(function(student){ %>
          <li>
            <form action="/remove/<%= student %>?_method=DELETE" method="POST">
              <input type="submit" value="X"> <span class="studentName"><%= student %></span>
            </form>  
          </li>
        <% }); %>
      </ul>
    </div>
  </div>

</div>

  
